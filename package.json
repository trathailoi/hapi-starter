{
  "name": "starter",
  "version": "1.0.0",
  "description": "Starter for Typescript/HAPI/Inversify/TypeORM",
  "main": "index.js",
  "scripts": {
    "db:start": "docker-compose -f database/docker-compose.yml up -d",
    "db:stop": "docker-compose -f database/docker-compose.yml down",
    "dev": "npm run nodemon:build",
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 ./src/**/*.yaml ./dist/",
    "start": "npm run build && node dist/index.js",
    "nodemon:build": "npm run copy-files && nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "test": "jest"
  },
  "author": "Craig Drabik",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/hapi": "^20.2.1",
    "@hapi/inert": "^6.0.4",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^6.1.0",
    "automapper-ts": "^1.9.0",
    "configue": "^1.3.6",
    "hapi-swagger": "^14.2.4",
    "hapijs-status-monitor": "^1.0.1",
    "inversify": "^6.0.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.39",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^20.0.9",
    "@types/hapi__joi": "^17.1.7",
    "@types/hapi__vision": "^5.5.3",
    "@types/jest": "^27.0.2",
    "copyfiles": "^2.4.1",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^8.3.0",
    "tslint": "^5.4.3",
    "typescript": "^4.4.0"
  }
}
